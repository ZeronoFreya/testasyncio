html {
    background: orange;
    overflow: none;
}

html>header {
    width: *;
    line-height: 1.6em;
    flow: horizontal;
    margin: 3dip 3dip 0 3dip;
}

html>header>caption {
    width: *;
    height: *;
}

html>header>button {
    behavior: clickable;
    /*non-focusable button*/
}

body {
    margin: 0 3dip 3dip 3dip;
    background: gold;
    overflow: none;
}